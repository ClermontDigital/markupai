{
    "name": "markupai/php-sdk",
    "version": "1.0.2",
    "description": "PHP SDK for Markup.ai content governance platform",
    "type": "library",
    "license": "Apache-2.0",
    "keywords": ["markup", "content", "governance", "style", "writing", "ai"],
    "homepage": "https://markup.ai",
    "authors": [
        {
            "name": "developersteve"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0|^10.0|^11.0|^12.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0|^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0",
        "guzzlehttp/guzzle": "^7.0",
        "nyholm/psr7": "^1.0"
    },
    "suggest": {
        "guzzlehttp/guzzle": "For HTTP client implementation",
        "nyholm/psr7": "For PSR-7 HTTP message implementation",
        "php-http/discovery": "For automatic discovery of PSR-18 and PSR-17 implementations"
    },
    "autoload": {
        "psr-4": {
            "MarkupAI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MarkupAI\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests --level=8",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MarkupAI\\Laravel\\MarkupAiServiceProvider"
            ],
            "aliases": {
                "MarkupAi": "MarkupAI\\Laravel\\Facades\\MarkupAi"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
